<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/page_act"
    android:background="@drawable/gradient_list"
    android:layoutDirection="rtl"
    tools:context=".PageActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/page_toolbar"
        />
    <LinearLayout
        android:background="@drawable/edittext_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:gravity="center"
            android:id="@+id/section_title_tv"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:layout_weight="4"/>
        <ImageView
            android:id="@+id/bookmark_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:tag="off"
            android:src="@drawable/fav_off"/>
    </LinearLayout>
    <ScrollView
        android:background="@drawable/edittext_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
        <TextView
            android:id="@+id/page_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />
    </ScrollView>
    <LinearLayout
        android:background="@drawable/edittext_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:text="@string/prev_page_btn_txt"
            android:id="@+id/prev_page_btn"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/page_number_tv"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/next_page_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="@string/next_page_btn_txt"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>